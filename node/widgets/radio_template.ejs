<div class="widget" id="<%= id %>">
    <div class="invisible widget-options" style="position: absolute; z-index: 10">
        <form data-id="<%= id %>" data-service="radio">
            <div class="form-group row">
                <label for="widget_radio_title_<%= id %>" class="col-sm-2 col-form-label">Titre</label>
                <div class="col-sm-10">
                    <input class="form-control" id="widget_radio_title_<%= id %>" style="width: 100%" name="title" value="<%= title %>" placeholder="Paris" type="text" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_radio_url_<%= id %>" class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="url" id="widget_radio_url_<%= id %>" value="<%= url %>" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_radio_refresh_<%= id %>" class="col-sm-2 col-form-label">Actualiser</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="refresh" id="widget_radio_refresh_<%= id %>" value="<%= refresh %>" required/>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Envoyer</button>
            </div>
        </form>
    </div>
    <div class="visible widget-content" style="z-index:1;color: #00ABEB;">
        <div class="container-fluid">
            <div class="row">
                <audio controls="" preload="auto" src="<%= url %>" style="height: 100%;width:100%"></audio>
            </div>
        </div>
    </div>
</div>