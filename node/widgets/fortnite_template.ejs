<div class="widget" id="<%= id %>">
    <div class="invisible widget-options widget-scrollbar" style="position: absolute; z-index: 10">
        <form data-id="<%= id %>" data-service="fortnite">
            <div class="form-group row">
                <label for="widget_fortnite_title_<%= id %>" class="col-sm-4 col-form-label">Titre</label>
                <div class="col-sm-8">
                    <input class="form-control" id="widget_fortnite_title_<%= id %>" style="width: 100%" name="title" value="<%= title %>" placeholder="Paris" type="text"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_fortnite_pseudo_<%= id %>" class="col-sm-4 col-form-label">Pseudo</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="pseudo" id="widget_fortnite_pseudo_<%= id %>" value="<%= pseudo %>" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_fortnite_plateforme_<%= id %>" class="col-sm-4 col-form-label">Plateforme</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="plateforme" id="widget_fortnite_plateforme_<%= id %>" value="<%= plateforme %>" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_fortnite_refresh_<%= id %>" class="col-sm-4 col-form-label">Actualiser</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" name="refresh" id="widget_fortnite_refresh_<%= id %>" value="<%= refresh %>" required/>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Envoyer</button>
            </div>
        </form>
    </div>
    <div class="visible widget-content widget-scrollbar" style="z-index:1;color: #AAAAAA;">
        <div class="container-fluid">
            <div class="row">
                <% if (error == true) { %>
                    <span>Player Not Found</span>
                <% } else { %>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Pseudo</label>
                        <div class="col-sm-6">
                            <div class="form-control">
                                <%= user %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Plateform</label>
                        <div class="col-sm-6">
                            <div class="form-control">
                                <%= plateforme %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Kills</label>
                        <div class="col-sm-6">
                            <div class="form-control">
                                <%= data['Kills'] %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Top1</label>
                        <div class="col-sm-6">
                            <div class="form-control">
                                <%= data['Wins'] %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Games</label>
                        <div class="col-sm-6">
                            <div class="form-control">
                                <%= data['Matches Played'] %>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label">Ratio K/D</label>
                        <div class="col-sm-6">
                            <div class="form-control">
                                <%= data['K/d'] %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>