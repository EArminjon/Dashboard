<div class="widget" id="<%= id %>">
    <div class="invisible widget-options" style="position: absolute; z-index: 1">
        <form data-id="<%= id %>" data-service="rss">
            <div class="form-group row">
                <label for="widget_rss_title_<%= id %>" class="col-sm-2 col-form-label">Titre</label>
                <div class="col-sm-10">
                    <input class="form-control" id="widget_rss_title_<%= id %>" style="width: 100%" name="title" value="<%= title %>" placeholder="Paris" type="text" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_rss_url_<%= id %>" class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input class="form-control" id="widget_rss_url_<%= id %>" style="width: 100%" name="url" value="<%= url %>" placeholder="Paris" type="text" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_rss_limit_<%= id %>" class="col-sm-2 col-form-label">Limit</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="limit" id="widget_rss_limit_<%= id %>" value="<%= limit %>" required/>
                </div>
            </div>
            <div class="form-group row">
                <label for="widget_rss_refresh_<%= id %>" class="col-sm-2 col-form-label">Actualiser</label>
                <div class="col-sm-10">
                    <input class="form-control" type="number" name="refresh" id="widget_rss_refresh_<%= id %>" value="<%= refresh %>" required/>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Envoyer</button>
            </div>
        </form>
    </div>
    <div class="visible widget-content widget-scrollbar" style="color: #00ABEB;">
        <% var index = 0 %>
        <% data.item.forEach(function(item) { %>
            <% index += 1 %>
            <% if (index > limit) { %>
                <% return false; %>
            <% } %>
            <article class="widget-article">
                <div class="widget-item-title">
                    <%- item.title %>
                </div>
                <div class="widget-item-description">
                    <%- item.description %>
                </div>
                <a href="<%- item.link %>">
                    <div style="width: 100%;">
                        <img class="img-fluid" alt="No picture available" src="<% if (item.enclosure) { %>
                                                        <%= item.enclosure['url'] %>
                                                    <% } %>
                                                    "/>
                    </div>
                </a>
            </article>
        <% }); %>
    </div>
</div>